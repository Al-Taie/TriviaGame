<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The left side of the bottom is 3 from the left side of the upper layer. dp, The top of the bottom, 6 from the top of the top. dp,If this control is not done, the left and upper sides of the bottom and upper layers will overlap.-->
    <item android:left="12dp"
        android:right="12dp"
        android:bottom="1dp">
        <shape>
            <corners android:radius="30dp"/>

            <solid android:color="#1CF8F8F9"/>
        </shape>
    </item>

    <item android:left="8dp"
        android:right="8dp"

        android:bottom="9dp">
        <shape>
            <corners android:radius="30dp"/>

            <solid android:color="#32FAF9FB"/>
        </shape>
    </item>

    <item android:left="3dp"
        android:right="3dp"

        android:bottom="24dp">
        <shape>
            <corners android:radius="30dp"/>

            <solid android:color="#4CF4EFFB"/>
        </shape>
    </item>

    <!--The right side of the upper layer is 3 from the right side of the lower layer. dp, The bottom of the upper layer is 6 from the bottom of the lower layer. dp-->
    <item android:bottom="40dp">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#fff"/>
        </shape>
    </item>

</layer-list>